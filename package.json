{
	"name": "ts-webpack-boilerplate",
	"displayName": "TS Webpack Boilerplate",
	"version": "1.0.0",
	"private": false,
	"main": "./dist/main.js",
	"scripts": {
		"start": "node ./dist/main.js",
		"dev": "npm run build:dev && concurrently \"npm run webpack:watch\" \"nodemon dist/main.js\"",
		"build:prod": "webpack --mode production",
		"build:dev": "webpack --mode development",
		"webpack:watch": "webpack --mode development --watch",
		"format": "prettier --write .",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [
		"Node.js",
		"TypeScript",
		"Webpack",
		"Boilerplate",
		"Starter",
		"Setup",
		"Development",
		"Production",
		"JavaScript",
		"Build"
	],
	"author": "Nikder Teams <info@nikder.com>",
	"license": "MIT",
	"description": "Node.js Boilerplate with TypeScript and Webpack setup",
	"devDependencies": {
		"concurrently": "^9.0.1",
		"nodemon": "^3.1.7",
		"prettier": "^3.3.3",
		"ts-loader": "^9.5.1",
		"typescript": "^5.6.3",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4",
		"webpack-node-externals": "^3.0.0"
	}
}
